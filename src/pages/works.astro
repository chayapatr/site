          🏫 → <a href="" class="px-1">patumwan demonstration school</a>
        </div>
      </div>
      {
        Object.entries(works).map(([k, v]: any) => {
          return (
            <div>
              <h2 class="text-2xl font-medium mb-3" id={k}>
                {v.text}
              </h2>
              <ul class="grid gap-5">
                {v.list.map(
                  (x: {
                    name: string;
                    org: string[];
                    link: string;
                    year: number;
                  }) => {
                    return (
                      <a
                        class="group border-b hover:bg-transparent group-hover:border-b-2 transition-all border-neutral-600 py-1 my-1 grid grid-cols-6 lg:grid-cols-10"
                        href=""
                      >
                        <h3 class="group-hover:font-medium text-lg col-span-4 lg:col-span-8">
                          {x.name}
                        </h3>
                        <h3 class="group-hover:font-medium text-lg text-end">
                          {orgMap(x.org).join(" | ")}
                        </h3>
                        <h3 class="group-hover:font-medium text-lg text-end">
                          {x.year}
                        </h3>
                      </a>
                    );
                  }
                )}
              </ul>
            </div>
          );
        })
      }
    </main>
    <Footer />
  </body>
</html>
