---
const { name, image } = Astro.props;
---

<a href="">
  <div class="relative">
    <img src={image} alt="" class="object-cover aspect-video bg-neutral-200" />
    <div
      class="opacity-0 hover:opacity-100 absolute flex top-0 left-0 h-full w-full bg-neutral-950 transition-all justify-center items-center p-8"
    >
      <h3 class="text-xl text-center text-white">{name}</h3>
    </div>
    <!-- <p class="pt-[0.2rem] text-xs">{name}</p> -->
  </div>
</a>
